'''Command line wrapper for the ccs_validate script.'''


import sys
from ccs.common.exceptions import ScriptError
import ccs.scripts.ccs_validate as ccs_validate


try:
    ccs_validate.main()
except ScriptError as exc:
    sys.stderr.write('ScriptError: ' + str(exc) + '\n')
    sys.exit(1)
